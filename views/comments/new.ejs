
<%- include("../partials/header") %>
<div class="container">
	<h1 style="text-align: center; margin:50px auto"> Add a new comments to <%= movie.name %> </h1>
	<div style="width: 30%; margin: 20px auto;">
		<form action="/movies/<%= movie._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">submit</button>
			</div>
		</form>
		<a href="/movies/<%=movie._id %>">Go back</a>
	</div>
	

		

</div>
<%- include("../partials/footer") %>